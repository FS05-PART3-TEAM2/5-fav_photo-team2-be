model ExchangeOffer {
  id              String   @id @default(uuid())
  offererId       String
  userPhotoCardId String
  status          String
  content         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  saleCard    SaleCard     @relation(fields: [saleCardId], references: [id])
  saleCardId  String
  marketOffer MarketOffer?
}
